.nav-bar {
	position: fixed;
	width: 100%;
	top: 0;
	color: #fff;
	background-color: rgb(255, 255, 255, .5);
	backdrop-filter: blur(15px);
	z-index: 99;
}

.navColor {
	background-color: #fff;
}

.nav-bar .search {
	width: 60%;
	color: #333;
	font-size: 14px;
	background: #fff;
	position: absolute;
	border-radius: 24px;
	background: #efefef;
	padding-left: 24px;
}